@model CapaEntidad.entCliente

@{
    ViewData["Title"] = "Detalle del Cliente";
}

<div class="container mt-5">
    <h2><i class="fas fa-info-circle"></i> Detalle del Cliente</h2>

    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Nombre:</dt>
                <dd class="col-sm-8">@Model.Nombre</dd>

                <dt class="col-sm-4">Apellido:</dt>
                <dd class="col-sm-8">@Model.Apellido</dd>

                <dt class="col-sm-4">Email:</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">Teléfono:</dt>
                <dd class="col-sm-8">@Model.Telefono</dd>

                <dt class="col-sm-4">Dirección:</dt>
                <dd class="col-sm-8">@Model.Direccion</dd>

                <dt class="col-sm-4">DNI / RUC:</dt>
                <dd class="col-sm-8">@Model.DNI_RUC</dd>

                <dt class="col-sm-4">Fecha de Nacimiento:</dt>
                <dd class="col-sm-8">@Model.FechaNacimiento?.ToShortDateString()</dd>

                <dt class="col-sm-4">Tipo de Cliente:</dt>
                <dd class="col-sm-8">@Model.TipoCliente</dd>

                <dt class="col-sm-4">Fecha de Registro:</dt>
                <dd class="col-sm-8">@Model.FechaRegistro.ToShortDateString()</dd>

                <dt class="col-sm-4">Fecha de Actualización:</dt>
                <dd class="col-sm-8">@Model.FechaActualizacion?.ToShortDateString()</dd>

                <dt class="col-sm-4">¿Activo?</dt>
                <dd class="col-sm-8">
                    @if (Model.Activo)
                    {
                        <span class="badge bg-success">Sí</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">No</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Listar" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver
        </a>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
