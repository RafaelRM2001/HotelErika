@model List<CapaEntidad.entCliente>

@{
    ViewData["Title"] = "Gestión de Clientes";
}

<!-- ESTILOS PARA EL FONDO Y TABLA -->
<style>
    body {
        background-image: url('https://imgs.search.brave.com/ShxjdQNbcjGQIxD3n2lkfQmuF5LIJNIGTWu75RZTp0c/rs:fit:860:0:0:0/g:ce/aHR0cHM6Ly9jb250/ZW50LXZpYWplcy5u/YXRpb25hbGdlb2dy/YXBoaWMuY29tLmVz/L21lZGlvLzIwMjQv/MDUvMTAvY2FsYS1z/YWxhZGV0YV8yYjdl/YmM4N18yNDA1MTAx/MjM3NTBfMTIwMHg4/MDAuanBn');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        background-repeat: no-repeat;
        font-family: 'Segoe UI', sans-serif;
    }

    .table-responsive {
        background-color: rgba(255, 255, 255, 0.95);
        padding: 20px;
        border-radius: 12px;
    }

    h2 {
        font-weight: bold;
    }

    .table thead th {
        vertical-align: middle;
    }

    .btn {
        min-width: 36px;
    }
</style>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Clientes Registrados</h2>
        <a class="btn btn-success shadow-sm" asp-action="InsertarCliente">
            <i class="fas fa-user-plus"></i> Nuevo Cliente
        </a>
    </div>

    <div class="table-responsive shadow-sm">
        <table class="table table-hover align-middle table-bordered bg-white">
            <thead class="table-dark text-center">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Email</th>
                    <th>Teléfono</th>
                    <th>DNI/RUC</th>
                    <th>Tipo</th>
                    <th>F. Nacimiento</th>
                    <th>F. Registro</th>
                    <th>Activo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cliente in Model)
                {
                    <tr class="text-center">
                        <td>@cliente.Id</td>
                        <td>@cliente.Nombre</td>
                        <td>@cliente.Apellido</td>
                        <td>@cliente.Email</td>
                        <td>@cliente.Telefono</td>
                        <td>@cliente.DNI_RUC</td>
                        <td>@cliente.TipoCliente</td>
                        <td>@cliente.FechaNacimiento?.ToString("yyyy-MM-dd")</td>
                        <td>@cliente.FechaRegistro.ToString("yyyy-MM-dd")</td>
                        <td>
                            @if (cliente.Activo)
                            {
                                <span class="badge bg-success">Sí</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </td>
                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                <a class="btn btn-outline-info btn-sm" asp-action="Detalle" asp-route-id="@cliente.Id" title="Ver">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a class="btn btn-outline-warning btn-sm" asp-action="Editar" asp-route-id="@cliente.Id" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a class="btn btn-outline-danger btn-sm" asp-action="Eliminar" asp-route-id="@cliente.Id" title="Eliminar">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
