@{
    ViewData["Title"] = "Iniciar Sesión";
}

<!-- Estilos de login -->
<style>
    body {
        margin: 0;
        padding: 0;
        background: url('https://imgs.search.brave.com/PnqbnFq5FOeChsKF7jVf5gAURfUAA1UwHm5Sj1wwgp4/rs:fit:860:0:0:0/g:ce/aHR0cHM6Ly9sb3Mt/ZGVsZmluZXMtZGUt/Y2hpY2FtYS1wdWVy/dG8tY2hpY2FtYS1s/YS1saWJlcnRhZC5o/b3RlbG1peC5lcy9k/YXRhL1Bob3Rvcy9P/cmlnaW5hbFBob3Rv/LzEyNDU4LzEyNDU4/NTQvMTI0NTg1NDc2/NC9EZWxmaW5lcy1E/ZS1DaGljYW1hLUhv/dGVsLVB1ZXJ0by1D/aGljYW1hLUV4dGVy/aW9yLkpQRUc') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
        backdrop-filter: blur(5px);
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.15);
        border-radius: 15px;
        padding: 30px;
        color: #fff;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        width: 100%;
        max-width: 400px;
        animation: fadeIn 1s ease-in-out;
    }

    h3 {
        color: #ffffff;
        font-weight: 600;
    }

    label {
        font-weight: bold;
        color: #f8f9fa;
    }

    .form-control {
        background-color: rgba(255, 255, 255, 0.8);
        border: none;
        border-radius: 8px;
        transition: all 0.3s;
    }

        .form-control:focus {
            background-color: #fff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.6);
        }

    .btn-primary {
        border-radius: 25px;
        transition: all 0.3s ease-in-out;
    }

        .btn-primary:hover {
            transform: scale(1.05);
            background-color: #0056b3;
        }

    .btn-outline-secondary {
        border-radius: 8px;
    }

    .alert {
        background-color: rgba(220, 53, 69, 0.9);
        border: none;
        color: white;
    }

    .btn-link {
        color: #f8f9fa;
        text-decoration: underline;
    }

        .btn-link:hover {
            color: #ffffff;
        }



    {
        opacity: 0;
        transform: translateY(-20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }</style>

<!-- Contenido -->
<div class="login-container">
    <div class="glass-card">
        <div class="text-center mb-4">
            <h3><i class="fas fa-user-lock me-2"></i>Iniciar Sesión</h3>
        </div>

        @* Mensaje de error *@
        @if (ViewBag.Mensaje != null)
        {
            <div class="alert text-center">@ViewBag.Mensaje</div>
        }

        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label for="email">Correo Electrónico</label>
                <input type="email" name="email" class="form-control" placeholder="ejemplo@correo.com" required />
            </div>

            <div class="mb-3">
                <label for="password">Contraseña</label>
                <div class="input-group">
                    <input type="password" name="password" id="passwordInput" class="form-control" placeholder="********" required />
                    <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                        <i class="fas fa-eye" id="toggleIcon"></i>
                    </button>
                </div>
            </div>

            <div class="d-grid gap-2 mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-sign-in-alt"></i> Ingresar
                </button>
            </div>

            <div class="text-center mt-3">
                <a asp-action="Register" class="btn btn-link">¿No tienes cuenta? Regístrate aquí</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-papF1SmVskv64E5..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script>
        document.getElementById("togglePassword").addEventListener("click", function () {
            const passwordInput = document.getElementById("passwordInput");
            const icon = document.getElementById("toggleIcon");
            const isPassword = passwordInput.type === "password";

            passwordInput.type = isPassword ? "text" : "password";
            icon.classList.toggle("fa-eye");
            icon.classList.toggle("fa-eye-slash");
        });
    </script>
}
