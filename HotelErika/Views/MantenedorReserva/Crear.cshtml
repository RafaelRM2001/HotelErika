@{
}

@model CapaEntidad.entReserva
@{
    ViewData["Title"] = "Nueva Reserva";
    var rolId = ViewBag.RolId;
}

<h2>Nueva Reserva</h2>

<form asp-action="Crear" method="post">
    @if (rolId == 2) // Admin
    {
        <div class="mb-3">
            <label>Cliente</label>
            <select asp-for="ClienteId" asp-items="ViewBag.Clientes" class="form-control"></select>
        </div>
    }
    else
    {
        <input type="hidden" asp-for="ClienteId" value="@ViewBag.ClienteId" />
    }

    <div class="mb-3">
        <label>Habitación</label>
        <select asp-for="HabitacionId" asp-items="ViewBag.Habitaciones" class="form-control"></select>
    </div>

    <div class="mb-3">
        <label>Fecha Ingreso</label>
        <input asp-for="FechaIngreso" class="form-control" type="date" />
    </div>

    <div class="mb-3">
        <label>Fecha Salida</label>
        <input asp-for="FechaSalida" class="form-control" type="date" />
    </div>

    <button type="submit" class="btn btn-success">Reservar</button>
    <a asp-action="Listar" class="btn btn-secondary">Volver</a>
</form>

