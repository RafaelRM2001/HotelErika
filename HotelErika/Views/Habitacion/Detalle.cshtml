@model CapaEntidad.entHabitacion

@{
    ViewData["Title"] = "Detalles de Habitación";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm rounded">
                <div class="card-header bg-info text-white text-center">
                    <h4 class="fw-bold mb-0">Detalles de Habitación</h4>
                </div>

                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">Número:</dt>
                        <dd class="col-sm-8">@Model.Numero</dd>

                        <dt class="col-sm-4 fw-bold">Piso:</dt>
                        <dd class="col-sm-8">@Model.Piso</dd>

                        <dt class="col-sm-4 fw-bold">Tipo:</dt>
                        <dd class="col-sm-8">@Model.Tipo</dd>

                        <dt class="col-sm-4 fw-bold">Precio (S/):</dt>
                        <dd class="col-sm-8">@Model.Precio.ToString("F2")</dd>

                        <dt class="col-sm-4 fw-bold">Estado:</dt>
                        <dd class="col-sm-8">@Model.Estado</dd>

                        <dt class="col-sm-4 fw-bold">Descripción:</dt>
                        <dd class="col-sm-8">@Model.Descripcion</dd>

                        <dt class="col-sm-4 fw-bold">Fecha de Registro:</dt>
                        <dd class="col-sm-8">@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</dd>

                        @if (Model.FechaActualizacion != null)
                        {
                            <dt class="col-sm-4 fw-bold">Última Actualización:</dt>
                            <dd class="col-sm-8">@Model.FechaActualizacion?.ToString("dd/MM/yyyy HH:mm")</dd>
                        }
                    </dl>
                </div>

                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
