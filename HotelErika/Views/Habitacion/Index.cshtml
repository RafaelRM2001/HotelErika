@model List<CapaEntidad.entHabitacion>

@{
    ViewData["Title"] = "Gestión de Habitaciones";
}

<!-- ESTILOS PARA FONDO Y ESTÉTICA -->
<style>
    body {
        background-image: url('https://images.unsplash.com/photo-1507525428034-b723cf961d3e?auto=format&fit=crop&w=1350&q=80');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        background-repeat: no-repeat;
        font-family: 'Segoe UI', sans-serif;
    }

    .fondo-blanco-transparente {
        background-color: rgba(255, 255, 255, 0.95);
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
    }

    h2 {
        font-weight: bold;
        color: #2c3e50;
    }

    .table th,
    .table td {
        vertical-align: middle;
    }

    .btn i {
        pointer-events: none;
    }
</style>

<div class="container mt-5 fondo-blanco-transparente">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Habitaciones Registradas</h2>
        <a class="btn btn-success" asp-action="Crear">
            <i class="fas fa-bed"></i> Nueva Habitación
        </a>
    </div>

    @if (TempData["MensajeExito"] != null)
    {
        <div class="alert alert-success">@TempData["MensajeExito"]</div>
    }
    @if (TempData["MensajeError"] != null)
    {
        <div class="alert alert-danger">@TempData["MensajeError"]</div>
    }

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover align-middle table-bordered bg-white">
            <thead class="table-dark text-center">
                <tr>
                    <th>#</th>
                    <th>Número de Habitación</th>
                    <th>Número de Piso</th>
                    <th>Tipo</th>
                    <th>Precio (S/)</th>
                    <th>Estado</th>
                    <th>F. Registro</th>
                    <th>F. Actualización</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="9" class="text-center text-muted">No hay habitaciones registradas.</td>
                    </tr>
                }
                else
                {
                    int i = 1;
                    foreach (var h in Model)
                    {
                        <tr class="text-center">
                            <td>@i</td>
                            <td>@h.Numero</td>
                            <td>@h.Piso</td>
                            <td>@h.Tipo</td>
                            <td>@h.Precio.ToString("F2")</td>
                            <td>
                                @if (h.Estado == "Disponible")
                                {
                                    <span class="badge bg-success">@h.Estado</span>
                                }
                                else if (h.Estado == "Ocupada")
                                {
                                    <span class="badge bg-warning text-dark">@h.Estado</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@h.Estado</span>
                                }
                            </td>
                            <td>@h.FechaRegistro.ToString("yyyy-MM-dd")</td>
                            <td>@(h.FechaActualizacion?.ToString("yyyy-MM-dd") ?? "-")</td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <a class="btn btn-outline-info btn-sm" asp-action="Detalle" asp-route-id="@h.Id" title="Ver">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a class="btn btn-outline-warning btn-sm" asp-action="Editar" asp-route-id="@h.Id" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a class="btn btn-outline-danger btn-sm" asp-action="Eliminar" asp-route-id="@h.Id" title="Eliminar">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        i++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
