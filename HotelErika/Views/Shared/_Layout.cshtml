@{
    var rolId = Context.Session.GetInt32("RolId");
    var usuarioNombre = Context.Session.GetString("UsuarioNombre");
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Hotel Erika</title>

    <!-- Bootstrap CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />

    <style>
        html, body {
            height: 100%;
            display: flex;
            flex-direction: column;
            background-color: #eef2f7;
            font-family: 'Poppins', sans-serif;
        }

        .content {
            flex: 1;
        }

        .navbar-custom {
            background: linear-gradient(135deg, #0074d9 0%, #004a99 100%) !important;
        }

            .navbar-custom .navbar-brand, .navbar-custom .nav-link {
                color: white !important;
            }

                .navbar-custom .nav-link:hover {
                    color: #ffcc00 !important;
                }

        .footer-custom {
            background: #004a99;
            color: white;
            padding: 15px 0;
            text-align: center;
            font-size: 0.9rem;
            width: 100%;
            margin-top: auto;
        }

            .footer-custom a {
                color: #ffcc00;
                text-decoration: none;
            }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Hotel Erika</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <!-- Menú visible según Rol -->
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>

                    @* Menú exclusivo para Administrador *@
                    @if (rolId == 2)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="MantenedorCliente" asp-action="Listar">Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Habitacion" asp-action="Index">Habitaciones</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Comprobante" asp-action="Index">Comprobantes</a>
                        </li>
                    }

                    @* Reservas visible solo si ha iniciado sesión *@
                    @if (!string.IsNullOrEmpty(usuarioNombre))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="MantenedorReserva" asp-action="Index">Reservas</a>
                        </li>
                    }

                    @* Usuario actual + Cerrar sesión *@
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            @if (!string.IsNullOrEmpty(usuarioNombre))
                            {
                                @usuarioNombre
                            }
                            else
                            {
                                @:Usuario
                            }
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item" asp-controller="Login" asp-action="CerrarSesion">Cerrar Sesión</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenido principal -->
    <div class="container content">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="footer-custom">
        <div class="container">
            &copy; @DateTime.Now.Year - SisHot | Todos los derechos reservados |
            <a asp-controller="Home" asp-action="Privacy">Política de Privacidad</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <script src="~/js/scripts.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
